{
  "name": "@tsumug/styleguide",
  "version": "0.0.0",
  "author": "Tsumug Inc.",
  "devDependencies": {
    "can-npm-publish": "1.3.2",
    "fixpack": "2.3.1",
    "husky": "3.1.0",
    "lerna": "3.18.3",
    "lerna-changelog": "0.8.2",
    "lint-staged": "8.2.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "textlint": "11.4.0",
    "tslint": "5.20.0",
    "typescript": "3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/package.json": [
      "fixpack",
      "git add"
    ],
    "*.{md,js,jsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "main": "n/a",
  "private": true,
  "repository": "ssh://git@github.com/TMG-SK/styleguide.git",
  "scripts": {
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "lerna run test --parallel"
  },
  "workspaces": [
    "packages/*"
  ]
}
